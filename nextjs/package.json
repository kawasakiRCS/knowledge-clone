    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headless": "HEADLESS=true playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "HEADLESS=false playwright test --headed",
    "test:e2e:debug": "HEADLESS=false playwright test --debug",
    "test:e2e:report": "playwright show-report --host 0.0.0.0",
